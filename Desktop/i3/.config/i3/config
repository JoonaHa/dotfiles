# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && $refresh_i3status && ~/bin/scripts/volume-notify.sh
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && $refresh_i3status && ~/bin/scripts/volume-notify.sh
bindsym XF86AudioMute exec --no-startup-id pamixer -t && $refresh_i3status && ~/bin/scripts/volume-notify.sh
bindsym XF86AudioMicMute exec --no-startup-id pamixer --default-source -t && $refresh_i3status

# Media player controls
# Sleep so playercrtl can detect the changed status
bindsym XF86AudioPlay exec playerctl play-pause && sleep 0.2 && ~/bin/scripts/now-playing.sh
bindsym XF86AudioNext exec playerctl next && sleep 0.2 && ~/bin/scripts/now-playing.sh
bindsym XF86AudioPrev exec playerctl previous && sleep 0.2 && ~/bin/scripts/now-playing.sh
bindsym XF86AudioStop exec playerctl stop && sleep 0.2 && ~/bin/scripts/now-playing.sh

bindsym $mod+F5 exec pavucontrol
bindsym $mod+Mod1+l exec /home/mina/bin/scripts/i3lock.sh
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- /home/mina/bin/scripts/i3lock.sh
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


bindsym $mod+r mode "resize"

# emojies
bindsym $mod+period exec rofimoji 

# Screenshots
set $shot_path /home/mina/Kuvat/Kuvakaappaukset/$(date '+%Y-%m-%d_%H:%M:%S').png
set $xclip xclip -selection clipboard -t image/png

bindsym Print exec spectacle
bindsym --release Ctrl+Print exec maim | $xclip && notify-send 'Entire screen screenshot saved to clipboard'
bindsym --release Mod1+Sys_Req exec maim -i $(xdotool getactivewindow) $shot_path && notify-send 'Active window screenshot saved to a file' $shot_path
bindsym --release Ctrl+Mod1+Sys_Req exec maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png && notify-send 'Active window screenshot saved to clipboard'
bindsym --release Shift+Print exec maim -s $shot_path && notify-send 'Selected area screenshot saved to a file' $shot_path
bindsym --release Ctrl+Shift+Print exec maim -s | $xclip && notify-send 'Selected area screenshot saved to clipboard'

